%% -*- mode: erlang -*-
[{lager,
  [{handlers,
    [{lager_console_backend, info},
     {lager_file_backend,
      [{file, "priv/log/error.log"},
       {level, error}, {size, 10485760}, {date, "$D0"}, {count, 5}]},
     {lager_file_backend,
      [{file, "priv/log/console.log"},
       {level, info}, {size, 10485760}, {date, "$D0"}, {count, 5}]}
    ]},
   {crash_log, "priv/log/crash.log"}
  ]},

 {webzmachine,
  [{wmtrace_dir, "priv/wmtrace"},
   {silent_console, true}
  ]}
].
