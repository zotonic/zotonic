{require_min_otp_vsn, "22.3"}.

{erl_opts, [{i, "apps"}, {i, "apps_user"}]}.

{project_app_dirs, ["apps/*", "apps_user/*"]}.

%%%%%
% Should use separate 'test' profile for the config below.
% That needs some adaptation of the build shell scripts.

{extra_src_dirs, ["test"]}.

{xref_checks, [undefined_function_calls, locals_not_used, deprecated_function_calls]}.

{xref_ignores,
 [% Ignore generated module
  {'z_language_data$map', languages_map_flat, 0},
  {'z_language_data$map', languages_map_main, 0},
  {'z_language_data$map', fallback, 0},
  {'z_language_data$map', codes_bin, 0},
  {'z_language_data$map', codes_atom, 0}]}.

{dialyzer, [{warnings, []}]}.

      % no_return

{project_plugins, [rebar3_format]}.

{format,
 [{files,
   ["rebar.config",
    "elvis.config",
    "apps/*/src/*.erl",
    "apps/*/test/*.erl",
    "apps/*/include/*.hrl",
    "apps_user/*/src/*.erl",
    "apps_user/*/test/*.erl",
    "apps_user/*/include/*.hrl",
    "release/packages/zotonic_apps/src/*.erl"]},
  {ignore, ["erlang_ls.config", ".editorconfig", ".dockerignore"]},
  {options,
   #{
       spaces_around_fields => true,
       inline_fields => none,
       inline_simple_funs => false,
       inline_attributes => none,
       paper => 120,
       ribbon => 120
   }}]}.
