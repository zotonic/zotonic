#!/usr/bin/env sh

readonly ZOTONIC=${ZOTONIC:=$(\cd `\dirname -- "$0"`/..;\pwd)}
export   ZOTONIC

# Protect PATH and ZOTONIC environment variables to be changed at runtime
readonly PATH
for var in $(\env | \grep ZOTONIC_ | \cut -d '=' -f 1)
do
	readonly "${var}"
	export "${var}"
done
# Start launcher
cd ./apps/zotonic_launcher/bin/ || \exit 1
exec ./zotonic "$@"
