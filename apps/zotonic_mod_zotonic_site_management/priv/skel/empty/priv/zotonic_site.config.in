%% Zotonic site configuration for %%SITE%%.
[
    %% This site is enabled or not.
    {enabled, true},

    %% Hostname on which this site runs
    {hostname, "%%SITEHOSTNAME%%"},

    %% Aliases which should redirect to the primary hostname
    %%{hostalias, ["www.example.com", "example.com"]},

    %% PostgreSQL database connection
    {dbhost, "%%DBHOST%%"},
    {dbport, %%DBPORT%% },
    {dbuser, "%%DBUSER%%"},
    {dbpassword, "%%DBPASSWORD%%"},
    {dbdatabase, "%%DBDATABASE%%"},
    {dbschema, "%%DBSCHEMA%%"},

    %% Depcache settings. The maximum size in Mbs
    {depcache_memory_max, 100},

    %% Password for the 'admin' user.
    {admin_password, "%%ADMINPASSWORD%%"},

    %% What skeleton site this site is based on; for installing the initial data.
    {skeleton, %%SKEL%%},

    %% Change modules below to override skeleton defaults
    {install_modules, [
        mod_base,
        mod_bootstrap,
        mod_menu,
        mod_oauth,
        mod_search,
        mod_oembed,
        mod_logging,

        mod_wires,
        mod_mqtt,

        mod_translation,
        mod_l10n,

        mod_authentication,
        mod_content_groups,
        mod_acl_user_groups,

        mod_editor_tinymce,

        mod_admin,
        mod_admin_category,
        mod_admin_config,
        mod_admin_identity,
        mod_admin_modules,
        mod_admin_predicate,
        mod_admin_merge,

        mod_seo,
        mod_seo_sitemap,

        mod_email_status,

        mod_media_exif,
        mod_video_embed,
        mod_video,
        mod_oembed,

        mod_development
    ]}
].
