[
    % Used for image links in the head meta tags.
    % For proposed dimensions, see: https://developers.facebook.com/docs/sharing/webmasters/images
    {"meta-tag-image", [
        {width, 1200},
        {height, 675},
        crop
    ]},

    % Used for schema.org generic image metadata
    {"schema-org-image", [
        {width, 1024},
        {height, 800},
        crop
    ]},

    % Recommended sizes for schema:image
    % https://developers.google.com/search/docs/appearance/structured-data/article
    {"schema-org-1x1", [
        {width, 1200},
        {height, 1200},
        crop
    ]},
    {"schema-org-4x3", [
        {width, 1200},
        {height, 800},
        crop
    ]},
    {"schema-org-16x9", [
        {width, 1200},
        {height, 675},
        crop
    ]},

    % Small logo images
    {"schema-org-logo", [
        {height, 60},
        crop,
        {lossless, auto}
    ]}
].
