    zotonic_filewatcher,
    zotonic_filehandler,

    {tls_certificate_check, "~> 1.11"},

    {setup, "2.1.0"},
    {logstasher, "~> 1.0"},
    {depcache, "~> 1.10"},
    {exometer_core, "1.6.1"},
    {bert, "0.1.0"},
    {dh_date, "1.0.0"},
    {poolboy, "1.5.2"},
    {epgsql, "~> 4.7"},
    {erlware_commons, "1.5.0"},
    {gproc, "0.9.0"},
    {parse_trans, "3.4.0"},
    {proper, "1.4.0"},
    {recon, "2.5.2"},
    {meck, "0.8.13"},
    {edown, "0.8.4"},
    {bcrypt, "~> 1.2.0"},
    {diffy, "1.1.2"},
    {eiconv, "1.0.0"},
    {erlpass, "1.0.4"},
    {gen_smtp, "1.2.0"},
    {mimetypes, "1.1.0"},
    {mochiweb, "3.2.2"},
