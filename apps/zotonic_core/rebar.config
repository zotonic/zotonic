{plugins, [pc]}.

{overrides,
 [{override, syslog, [
     {plugins, [pc]},
     {artifacts, ["priv/syslog_drv.so"]},
     {provider_hooks, [
         {post,
             [
             {compile, {pc, compile}},
             {clean, {pc, clean}}
             ]
          }]
      }
  ]}
]}.

{xref_checks, [undefined_function_calls,
               locals_not_used,
               deprecated_function_calls]}.
