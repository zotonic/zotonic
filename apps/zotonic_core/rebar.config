{require_min_otp_vsn, "22.3"}.

{erl_opts, [
    {parse_transform, lager_transform},

    %% OTP version specific defines
    {platform_define, "^(19|2)", rand_only},
    {platform_define, "^(1|20)", fun_stacktrace},
    {platform_define, "^(1|20|21)", crypto_hmac}
]}.

{deps, [
    {setup, "2.1.0"},
    {lager, "3.9.2"},
    {depcache, "1.7.1"},
    {exometer_core, "1.5.7"},
    {bert, "0.1.0"},
    {dh_date, "1.0.0"},
    {poolboy, "1.5.2"},
    {epgsql, "4.5.0"},
    {erlware_commons, "1.5.0"},
    {erlang_localtime, "1.0.0"},
    {gproc, "0.9.0"},
    {parse_trans, "3.4.0"},
    {proper, "1.4.0"},
    {recon, "2.5.1"},
    {meck, "0.8.13"},
    {edown, "0.8.4"},
    {bcrypt, "1.1.4"},
    {diffy, "1.1.2"},
    {eiconv, "1.0.0"},
    {erlpass, "1.0.4"},
    {gen_smtp, "1.1.1"},
    {mimetypes, "1.1.0"},
    {mochiweb, "2.20.1"},
    {jsx, "3.0.0"},
    {jsxrecord, "1.2.0"},
    {sidejob, "2.1.0"},
    {jobs, "0.9.0"},
    {filezcache, "1.0.1"},
    {yamerl, "0.8.1"},

    {zotonic_stdlib, "1.4.5"},
    {template_compiler, "1.3.3"},
    {dispatch_compiler, "1.0.0"},
    {cowmachine, "1.6.2"},
    {zotonic_ssl, "1.1.0"},
    {ringbuffer, "1.1.1"},
    {mqtt_sessions, "1.4.0"},

    {s3filez, "1.1.2"},
    {qdate_localtime, "1.2.0"},
    {qdate, "0.7.0"},
    {erlang_exif, "3.0.0"},
    {oauth, "2.1.0"},
    {keyserver, "1.0.0"}
]}.

{plugins, [pc]}.

{overrides, [
    {override, syslog, [
        {plugins, [pc]},
        {artifacts, ["priv/syslog_drv.so"]},
        {provider_hooks, [
            {post, [
                {compile, {pc, compile}},
                {clean, {pc, clean}}
            ]}
        ]}
    ]}
]}.

{xref_checks, [
    undefined_function_calls,
    locals_not_used,
    deprecated_function_calls
]}.
