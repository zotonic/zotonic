%% -*- mode: erlang -*-

{minimum_otp_vsn, "23"}.

{erl_opts, [
    debug_info
]}.

{deps, [
    zotonic_core,
    {certifi, "2.6.1"},
    {erlpass, "1.0.5"},

    % mod_geoip
    {locus, "1.15.0"},
    {ssl_verify_fun, "1.1.6"}
]}.

{xref_checks, [undefined_function_calls,
               locals_not_used,
               deprecated_function_calls]}.

{project_plugins, [rebar3_ex_doc]}.
{hex, [{doc, ex_doc}]}.

