%% -*- mode: erlang -*-

{minimum_otp_vsn, "23"}.

{erl_opts, [
    debug_info
]}.


{deps,
 [
    zotonic_core,
    zotonic_filewatcher,
    zotonic_fileindexer,
    zotonic_filehandler,
    zotonic_listen_http,
    zotonic_listen_smtp,
    {yamerl, "0.8.1"},
    {cowmachine, "~> 1.8"}
 ]
}.

{plugins, []}.

{xref_checks, [undefined_function_calls,
               locals_not_used,
               deprecated_function_calls]}.

{project_plugins, [rebar3_ex_doc]}.
{hex, [{doc, ex_doc}]}.

