#
# usage zotonic-compilefile <file> [file..]
#

. $ZOTONIC_SCRIPTS/helpers/zotonic_setup

function usage {
    echo "Usage: `basename $0` [files...]" 1>&2
    echo 1>&2
    exit 1
}

if [ "$*" = "" ]; then
    usage
fi

for FILE in $*; do
    if [ "${FILE::1}" != "/" ]; then
        FILE="`pwd`/$FILE"
    fi

    F=$(echo $FILE|sed -e "s!^$ZOTONIC/!!")
    if [ ! -e "$ZOTONIC/$F" ]; then
        echo "$FILE is not under the Zotonic basedir." 1>&2
        echo 1>&2
        exit 1
    fi
    echo "Compiling $F"
    (cd $ZOTONIC; $ERL -noshell -pa $PA $NAME_ARG ${NODENAME}_compile@$NODEHOST -run make files "$F" -s erlang halt)
done
