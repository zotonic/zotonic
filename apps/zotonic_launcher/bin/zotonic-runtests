. $ZOTONIC_SCRIPTS/helpers/zotonic_setup

require_zotonic_not_running
set -e

export ZOTONIC_PORT=8040
export ZOTONIC_LISTEN_PORT=8040
export ZOTONIC_PORT_SSL=8043
export ZOTONIC_SSL_LISTEN_PORT=8043
export ZOTONIC_SMTP_BOUNCE_PORT=2535

EBIN_DIR=_build/default/lib/zotonic_*/test

if [ "$1" != "" ]; then
    ALL="$1"
    shift
    while (( "$#" )); do
        ALL="$ALL,$1"
        shift
    done
else
    # Find all tests
    MODULES=`ls $EBIN_DIR/*.beam|sed 's/.beam//'|sed 's/.*\///'|grep -v pgsql`
    ALL="zotonic"
    ALL=`echo $ALL|sed 's/^,//'`
    for MODULE in $MODULES; do ALL="$ALL,$MODULE"; done
fi

echo
echo "Running the following tests in the testsandbox:"
echo $ALL
echo

# Run the tests
$ERL +P 10000000 +K true -pa $PA $NAME_ARG ${NODENAME}_testsandbox@$NODEHOST $(find_config_arg zotonic.config) -boot start_sasl -sasl errlog_type error -s zotonic -eval "zotonic:await_startup(),init:stop(case eunit:test([$ALL],[]) of error -> 1; ok -> 0 end)"
EXIT=$?
