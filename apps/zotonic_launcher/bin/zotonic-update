. $ZOTONIC_SCRIPTS/helpers/zotonic_setup

require_zotonic_running

echo "Updating Zotonic $NODENAME@$NODEHOST"
$ERL -noshell -pa $PA $NAME_ARG ${NODENAME}_update@$NODEHOST -s make all load -s zotonic update $NODENAME@$NODEHOST
