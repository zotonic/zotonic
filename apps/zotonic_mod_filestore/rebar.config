%% -*- mode: erlang -*-

{minimum_otp_vsn, "23"}.

{erl_opts, [
    debug_info
]}.

{deps, [
    zotonic_core,
    zotonic_mod_admin,

    {s3filez, "~> 2.0"},
    {ftpfilez, "~> 2.0"},
    {webdavfilez, "~> 2.0"},
    {filezcache, "~> 2.0"},
    {ssl_verify_fun, "~> 1.1"},
    {backoff, "1.1.6"}
]}.

{xref_checks, [undefined_function_calls,
               locals_not_used,
               deprecated_function_calls]}.


{project_plugins, [rebar3_ex_doc]}.
{hex, [{doc, ex_doc}]}.

